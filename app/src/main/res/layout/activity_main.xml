<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.recycleviewanimatorsdemo.MainActivity">

    <Button
        android:id="@+id/btn_animator_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/anim_sample" />

    <Button
        android:id="@+id/btn_adapter_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/anim_define" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/set_grid" />

</LinearLayout>
